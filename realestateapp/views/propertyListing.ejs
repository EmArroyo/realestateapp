    <!-- ======= Single Property ListingSection ======= -->
    <section class="section-single-property-listing section-t8">
      <div class="container">
        <div class="row">
            <% if(propertyListingData.length!=0){ %>
                <!-- Left -->
                <div class="col-6">
    
                    <!-- Image scroller -->
                    <div class="row pb-4">
                        <div class="col-12">
                            <% 
                                if(propertyListingData.length!=0){ 
                                    const image_JsonObj = propertyListingData[0].images_json
                                    var images = JSON.parse(image_JsonObj);
                            %>
                                <div id="propertyImages" class="carousel slide" data-ride="carousel">
                                    <ol class="carousel-indicators">
                                        <% 
                                            var targetCounter=0;
                                            images.forEach(function(images){
                                        %>
                                            <li data-target="#propertyImages" data-slide-to="<%=targetCounter; %>" <% if(targetCounter==0){%>class="active"<%}%>></li>
                                        <%
                                                targetCounter++; 
                                            }) 
                                        %>
                                    </ol>
    
                                    <div class="carousel-inner">
                                        <% 
                                            var imageCounter=0;
                                            images.forEach(function(images){
                                        %>
                                            <div class="carousel-item <% if(imageCounter==0){%>active"<%}%>">
                                                <img class="d-block w-100" src="<%=images %>" alt="First slide">
                                            </div>
                                        <%
                                                imageCounter++; 
                                            }) 
                                        %>
                                    </div>
    
                                    <a class="carousel-control-prev" href="#propertyImages" role="button" data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#propertyImages" role="button" data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            <% } else{ %>
                                <p>No Image JSON array provided</p>
                            <% } %>
                        </div>
                    </div>
    
                    <!-- Map -->
                    <div class="row">
                        <div class="col-12">
                        <div class="map">
                            <% if(propertyListingData.length!=0){ %>
                                <iframe  src="<%=propertyListingData[0].google_maps_embed_code %>" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                            <% } else{ %>
                                <p>No Google Map Embed code provided</p>
                            <% } %>
                        </div>
                    </div>
                    </div>
    
                </div>
    
    
                <!-- Right -->
                <div class="col-6">
    
                    <!-- Property Title -->
                    <div class="row">
                        <div class="col-12">
                            <h1 class="pb-4">
                                <% if(propertyListingData.length!=0){%><%=propertyListingData[0].house_number %><%}%>,&nbsp;<% if(propertyListingData.length!=0){%><%=propertyListingData[0].street %><%}%>,&nbsp;<% if(propertyListingData.length!=0){%><%=propertyListingData[0].location %><%}%>,&nbsp;<% if(propertyListingData.length!=0){%><%=propertyListingData[0].county %><%}%>
                            </h1>
    
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <th scope="row">Type</th>
                                        <td>
                                            <% if(propertyListingData.length!=0){ %>
                                                <%=propertyListingData[0].type %>
                                            <% } else{ %>
                                                No Type provided
                                            <% } %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Price</th>
                                        <td>
                                            <% if(propertyListingData.length!=0){ %>
                                                &pound;<%=propertyListingData[0].price %>
                                            <% } else{ %>
                                                No Price provided
                                            <% } %>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
    
                    <!-- Property Details -->
                    <div class="row pt-4">
                        <div class="col-12">
                            <ul class="nav nav-tabs" id="property-tab" role="tablist">
                                <!-- Quick Info tab -->
                                <li class="nav-item">
                                <a class="nav-link active" id="quickinfo-tab" data-toggle="tab" href="#quickinfo" role="tab" aria-controls="quickinfo" aria-selected="true">Quick Info</a>
                                </li>
    
                                <!-- Property Details tab -->
                                <li class="nav-item">
                                <a class="nav-link" id="propertydetails-tab" data-toggle="tab" href="#propertydetails" role="tab" aria-controls="propertydetails" aria-selected="false">Property Details</a>
                                </li>
                            </ul>
                            
                            <div class="tab-content" id="property-tab-content">
                                <!-- Quick Info content -->
                                <div class="tab-pane fade show active" id="quickinfo" role="tabpanel" aria-labelledby="quickinfo-tab">
                                    <table class="table table-striped table-hover">
                                        <tbody>
                                            <tr>
                                                <th scope="row">Property Type</th>
                                                <td>
                                                    <% if(propertyListingData.length!=0){ %>
                                                        <%=propertyListingData[0].property_type %>
                                                    <% } else{ %>
                                                        No Property Type provided
                                                    <% } %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Beds</th>
                                                <td>
                                                    <% if(propertyListingData.length!=0){ %>
                                                        <%=propertyListingData[0].beds_count %>
                                                    <% } else{ %>
                                                        No Beds count provided
                                                    <% } %>                                                
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Bathrooms</th>
                                                <td>
                                                    <% if(propertyListingData.length!=0){ %>
                                                        <%=propertyListingData[0].bathroom_count %>
                                                    <% } else{ %>
                                                        No Bathroom count provided
                                                    <% } %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Garden</th>
                                                <td>
                                                    <% if(propertyListingData.length!=0){ %>
                                                        <% 
                                                            if(propertyListingData[0].garden_boolean==1){ 
                                                        %>
                                                                Yes
                                                        <%  } else{ %>
                                                                No
                                                        %>
                                                        <% 
                                                            }
                                                        %>
                                                    <% } else{ %>
                                                        No Garden Boolean provided
                                                    <% } %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Garage</th>
                                                <td>
                                                    <% if(propertyListingData.length!=0){ %>
                                                        <% 
                                                            if(propertyListingData[0].garage_boolean==1){ 
                                                        %>
                                                                Yes
                                                        <%  } else{ %>
                                                                No
                                                        %>
                                                        <% 
                                                            }
                                                        %>
                                                    <% } else{ %>
                                                        No Garage Boolean provided
                                                    <% } %>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
    
                                <!-- Property Details content -->
                                <div class="tab-pane fade" id="propertydetails" role="tabpanel" aria-labelledby="propertydetails-tab">
                                    <div class="p-3">
                                        <% if(propertyListingData.length!=0){ %>
                                            <p><%=propertyListingData[0].description %></p>
                                        <% } else{ %>
                                            <p>No Description provided</p>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
    
                </div>
    
    
            <% } else{ %>
                <div class="col-24">
                    <p>This row ID was not found in the database.</p>
                </div>
            <% } %>
        </div>
      </div>
    </section><!-- End Single Property ListingSection -->


